{% extends  'container/index.html.twig' %}
{% block style_html %}
	background-color: #606060
{% endblock %}
{% block title %}
	Acceuil | Gestion Stages
{% endblock %}
{% block container %}
<main class="uk-container">
	<div
			class="uk-grid-item-match uk-child-width-expand@s"
			uk-grid>
		<form class="uk-width-2-3 uk-padding uk-background-muted" method="post" action="{{ path('creation_stage_traitement') }}">
			<fieldset class="uk-fieldset">
				<legend class="uk-legend">
					<span
							class="uk-margin-small-right"
							uk-icon="icon: grid">
					</span>
					Création de Stage
				</legend>
				<label class="uk-form-label" for="form-label-name"style="color: #333">Entreprise :</label>
				<hr>

				<select id="form-label-name" id="companies' name="company" class="uk-select">
                        {% for name in companies %}
                            <option>{{name.name}}</option>
                        {% endfor %}
				</select>
				<div class="uk-margin">
					<a class="uk-button uk-button-default" href="{{ path('creation_entreprise') }}">
						Ajouter une entreprise
					</a>
				</div>
				<label class="uk-form-label" for="form-label-name"style="color: #333">Tuteur :</label>
				<hr>

				<select id="tuteurs" name="tuteur" class="uk-select">
					
				</select>
				<div class="uk-margin">
					<a class="uk-button uk-button-default" href="{{ path('creation_tuteur') }}">
						Ajouter un tuteur
					</a>
				</div>

				<label class="uk-form-label" for="form-label-name"style="color: #333">Date de début :</label>
				<input
						id="debut_date"
						class="uk-input uk-width-1-3"
						type="date"
						name="date_debut"
						required>

				<label class="uk-form-label" for="form-label-name"style="color: #333">Date de fin :</label>
				<input
						id="fin_date"
						class="uk-input uk-width-1-3"
						type="date"
						name="date_fin"
						required>
				<div class="uk-margin">
					<button
							class="uk-button uk-button-default"
							type="submit"
							>
						Créer le stage
					</button>
				</div>

			</fieldset>
		</form>
	</div>
</main>
{% endblock %}
{% block javascript %}
	<script src="{{ asset("js/getTuteurs.js") }}"></script>
	
{% endblock %}